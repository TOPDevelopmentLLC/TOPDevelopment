{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "components/*": [ "./components/*" ],
      "lib/*": [ "./lib/*" ],
      "hooks/*": [ "./hooks/*" ],
      "constants/*": [ "./constants/*" ],
      "assets/*": [ "./assets/*" ],
    }
  },
  "include": [
    "app",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
